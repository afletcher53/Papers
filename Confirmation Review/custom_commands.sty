\usepackage{titlesec}
\usepackage{titletoc}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Customize section and subsection style %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Use Arabic numerals for sections throughout the document.
% These redefinitions MUST be here for the titletoc settings below to be correct
\renewcommand{\thesection}{\arabic{section}} 
\renewcommand{\thesubsection}{\thesection.\arabic{subsection}}
\renewcommand{\thesubsubsection}{\thesubsection.\arabic{subsubsection}}

% Section formatting
\titleformat{\section}
  {\normalfont\Large\bfseries\centering} % Format for the whole section title (including number)
  {\thesection} % The section number
  {0.5em} % Space between the number and the title text
  {} % Center the section title (Moved centering to here)

% Subsection formatting
\titleformat{\subsection}
  {\normalfont\large\bfseries}
  {\thesubsection}
  {0.5em}
  {}

% Subsubsection formatting
\titleformat{\subsubsection}
  {\normalfont\normalsize\bfseries}
  {\thesubsubsection}
  {0.5em}
  {}

% Customize the spacing in the table of contents
% The indents here are just examples, adjust them as you like.
\titlecontents{section}
  [0em] % Left indent
  {}
  {\contentslabel{2.5em}} % Format of the section number
  {}
  {\titlerule*[.5pc]{.}\contentspage}

\titlecontents{subsection}
  [2.5em] % Left indent (further indented than sections)
  {}
  {\contentslabel{3.0em}} % Format of the subsection number
  {}
  {\titlerule*[.5pc]{.}\contentspage}

\titlecontents{subsubsection}
  [5.5em] % Left indent (even further indented)
  {}
  {\contentslabel{3.5em}} % Format of the subsubsection number
  {}
  {\titlerule*[.5pc]{.}\contentspage}

